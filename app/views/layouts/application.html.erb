      <%= link_to "Profil", href="/users/sign_in" %>
    <% else %>
      <%= link_to "M'enregistrer", new_user_session_path %>
    <% end %>
   
    <div>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
